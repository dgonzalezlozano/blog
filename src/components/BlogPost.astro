---
const { title, url, description, author, pubDate, tags } = Astro.props;
import { format } from 'date-fns';
import { es } from 'date-fns/locale';
---
<article class="max-w-3xl mx-auto">
    <h2 class="text-3xl font-semibold my-2">
        <a href={url} class="bg-green-200 hover:bg-green-300">{title}</a>
    </h2>
    <p class="text-gray-500 mb-2">
        {format(new Date(pubDate), 'd MMMM, yyyy', { locale: es })}
    </p>
    <div class="tags text-sm mx-auto mb-4">
        {tags.map(tag => (
            <a href={`/tags/${tag}`} class="inline-block hover:text-gray-800 transition-colors duration-200 mr-2 mb-2 mt-2">
                <span class="px-2 py-1 border border-gray-300 rounded hover:bg-gray-300">
                    #{tag}
                </span>
            </a>
        ))}
    </div>    
    <p class="text-xl leading-relaxed mb-4 robotoloco">
        {description}
    </p>
    <a href={url} class="text-gray-600 hover:underline text-lg">
        Continuar leyendo â†’
    </a>
</article>
